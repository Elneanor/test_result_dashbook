<p id="notice"><%= notice %></p>

<p>
  <strong>Project name:</strong>
  <%= @project.project_name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @project.start_date %>
</p>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Suite Name</th>
      <th>Case Name</th>
      <th>Description</th>
      <th>Tester</th>
    </tr>
  </thead>

  <tbody>
    <% @project.cases.each do |c| -%>
      <tr>
        <td></td>
        <td><%= c.case_name %></td>
        <td><%= c.description %></td>
        <td><%= c.tester_user.badge %></td>
      </tr>
    <% end -%>
    <% @project.suites_cases.each do |c| -%>
      <tr>
        <td><%= c.suite.suite_name %></td>
        <td><%= c.case_name %></td>
        <td><%= c.description %></td>
        <td><%= c.tester_user.badge %></td>
      </tr>
    <% end -%>
  </tbody>
</table>


<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
